---
type Hero = { src: string; alt?: string }
const { hero } = Astro.props as { hero?: Hero }
---

{
  hero && (
    <figure class="hero">
      <img
        src={hero.src}
        alt={hero.alt || ''}
        loading="lazy"
        decoding="async"
      />
    </figure>
  )
}

<style>
  .hero {
    margin: 6px 0 14px;
  }
  .hero img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 12px;
  }
</style>
